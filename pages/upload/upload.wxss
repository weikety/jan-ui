.tips {
  color: var(--primary-color);
}

.container {
  width: 100vw;
}

.container-no-padding {
  width: 100vw;
  padding: 0;
}

button {
  margin: 11px 22px;
}

.block {
  width: 100%;
  height: 44px;
  background: #e98282;
}

.jan-tabbar {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.jan-tabbar jan-tabbar-item, .jan-tabbar > view {
  flex-basis: 25vw;
}

.scroller {
  width: 100vw;
  height: 100vh;
}

.test {
  opacity: 0.1 !important;
}