.jan-field-wrapper {
  width: 100%;
  min-height: 88rpx;
  background-color: var(--bg-color, #fff);
  color: var(--font-color-weight, #212121);
  box-sizing: border-box;
  overflow: hidden;
}

.jan-field-container {
  width: 100%;
  min-height: 88rpx;
  overflow: hidden;
  box-sizing: border-box;
  font-size: inherit;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: nowrap;
}

.jan-field-right-slot {
  height: 100%;
  flex-shrink: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
}

.jan-field-right-icon,
.jan-field-right-slot {
  padding-left: 11rpx;
}

.jan-field-has-padding .jan-field-container,
.jan-field-has-padding .jan-field-error {
  padding: 0 22rpx;
}

.jan-field-error {
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 22rpx !important;
  font-size: var(--font-size-small);
}

.jan-field-clear {
  box-sizing: border-box;
  padding-left: 11rpx;
  flex-shrink: 0;
}

.jan-field-has-padding .jan-field-container .jan-field-clear {
  padding: 11rpx 0 11rpx 11rpx;
}

.jan-field-container input {
  width: 100%;
  font-size: inherit;
  color: inherit;
  font-weight: 400;
  font-family: inherit !important;
  background-color: inherit;
}

.jan-field-input {
  width: 100%;
}

.jan-field-textarea {
  width: 100%;
  min-height: var(--font-size-normal);
  height: unset;
  box-sizing: border-box;
}
