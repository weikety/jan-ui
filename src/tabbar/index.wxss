@import "../main.wxss";

.jan-tabbar {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  overflow: hidden;
  background-color: var(--bg-color, #fff);
}

.jan-tabbar jan-tabbar-item,
.jan-tabbar > view {
  flex-basis: 100vw;
}

.jan-tabbar--fixed {
  position: fixed;
  bottom: 0;
}

.jan-tabbar--border {
  border-top: 2rpx solid var(--border-color, rgba(81, 90, 110, 0.05));
}
