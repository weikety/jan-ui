@import "../main.wxss";

.jan-uploader {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;
  box-sizing: border-box;
  overflow: hidden;
}

.jan-uploader.disabled {
  opacity: 0.6;
}

.jan-uploader-tips {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: var(--font-size-mini);
}

.jan-uploader-node,
.jan-uploader-container {
  width: 160rpx;
  height: 160rpx;
  background-color: var(--bg-color);
  box-sizing: border-box;
  border-radius: 8rpx;
  overflow: hidden;
}

.jan-uploader-image-node {
  width: 160rpx;
  height: 160rpx;
  background-color: var(--bg-color);
  box-sizing: border-box;
  border-radius: 8rpx;

  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-start;
}

.jan-uploader-node {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-start;
}

.jan-uploader-container {
  margin-right: 22rpx;
  margin-bottom: 22rpx;
}

.jan-uploader-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.jan-uploader-image-delete {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 50%;
  position: absolute;
  transform: translate(18rpx, -18rpx);
  padding-bottom: 8rpx;
  font-weight: bold !important;
}
