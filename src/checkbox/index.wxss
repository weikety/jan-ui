.jan-checkbox-container {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.jan-checkbox {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
  border: 1px solid var(--border-color, rgba(0, 0, 0, 0.1));
  background-color: var(--wrapper-color, #c6c6c6);
  overflow: hidden;
  font-size: 36rpx;
}

.jan-checkbox.jan-checkbox-size-large {
  width: 67rpx;
  height: 67rpx;
  font-size: 40rpx;
}

.jan-checkbox.jan-checkbox-size-small {
  width: 40rpx;
  height: 40rpx;
  font-size: 24rpx;
}

.jan-checkbox .jan-checkbox-node {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 900;
  border-radius: 4rpx;
  background-color: #4379ff;
  animation: fadeOut 0.1s;
  animation-fill-mode: forwards;
}

.jan-checkbox.check .jan-checkbox-node {
  animation: fadeIn 0.3s;
}

.jan-checkbox-hover {
  opacity: 0.8;
}

@keyframes fadeOut {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
  }
}

@keyframes fadeIn {
  from {
    width: 50%;
    height: 50%;
    opacity: 0;
  }

  to {
    width: 100%;
    height: 100%;
    opacity: 1;
  }
}
