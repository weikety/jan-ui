.jan-search-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
  box-sizing: border-box;
  overflow: hidden;
  padding: 22rpx;
}

.jan-search-action {
  flex-shrink: 0;
  font-size: var(--font-size-small);
  padding-left: 22rpx;
}

.jan-search-node {
  width: 100%;
  height: 66rpx;
  background-color: var(--bg-color);
  overflow: hidden;
  border-radius: 8rpx;
  padding: 0 22rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
  box-sizing: border-box;
}

.jan-search-icon {
  min-width: calc(var(--font-size-normal, 28rpx) + 2rpx);
  min-height: calc(var(--font-size-normal, 28rpx) + 2rpx);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}

.jan-search-input {
  width: 100%;
  height: 100%;
  color: var(--font-color, #515a6e);
}
