.jan-search-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
  box-sizing: border-box;
  overflow: hidden;
  padding: 22rpx;
}

.jan-search-action {
  flex-shrink: 0;
  font-size: var(--font-size-small);
  padding-left: 22rpx;
}

.jan-search-node {
  width: 100%;
  height: 66rpx;
  background-color: var(--bg-color);
  overflow: hidden;
  border-radius: 8rpx;
  padding: 0 11rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
  box-sizing: border-box;
}
