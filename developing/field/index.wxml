<view class="jan-field-wrapper {{ hasPadding ? 'jan-field-has-padding' : '' }}">
    <view class="jan-field-container">
        <input class="jan-field-input" type="{{ type }}" focus="{{ focus }}" value="{{ _value }}" disabled="{{ disabled || readonly }}" maxlength="{{ maxlength }}" placeholder="{{ placeholder }}" placeholder-style="{{ placeholderStyle }}" confirm-type="{{ confirmType }}" confirm-hold="{{ confirmHold }}" hold-keyboard="{{ holdKeyboard }}" cursor-spacing="{{ cursorSpacing }}" adjust-position="{{ adjustPosition }}" selection-end="{{ selectionEnd }}" selection-start="{{ selectionStart }}" password="{{ password || type === 'password' }}" bindinput="onInput" bind:blur="onBlur" bind:focus="onFocus" bind:confirm="onConfirm" />
        <view wx:if="{{ !(disabled || readonly) && clearable && _value }}" class="jan-field-clear" catch:tap="onClear">
            <jan-icon name="close-circle-fill" size="18" color="var(--font-color-light, #c6c6c6)" />
        </view>
        <view wx:if="{{ useRightSlot }}" class="jan-field-right-slot">
            <slot></slot>
        </view>
    </view>
    <view wx:if="{{ error }}" class="jan-field-error" style="{{ errorMessageStyle }}">
        {{ errorMessage }}
    </view>
</view>