.jan-field-container {
  width: 100%;
  height: 88rpx;
  background-color: var(--bg-color, #fff);
  color: var(--font-color, #515a6e);
  overflow: hidden;
  box-sizing: border-box;
  font-size: inherit;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: nowrap;
}

.jan-field-container.jan-field-has-padding {
  padding: 0 22rpx;
}

.jan-field-clear {
  box-sizing: border-box;
  padding: 11rpx 22rpx;
  flex-shrink: 0;
}

.jan-field-container.jan-field-has-padding .jan-field-clear {
  padding: 11rpx 0 11rpx 11rpx;
}

.jan-field-container input {
  width: 100%;
  font-size: inherit;
  color: inherit;
  background-color: inherit;
}
