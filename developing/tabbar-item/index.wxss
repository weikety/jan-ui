@import "../main.wxss";

.jan-tabbar-item-container {
  width: 100%;
  height: 100rpx;
  display: flex;
  box-sizing: border-box;
  padding: 0;
  overflow: hidden;
  justify-content: center;
  align-items: center;
  background-color: var(--bg-color, #fff);
}

.jan-tabbar-item {
  box-sizing: border-box;
  padding: 22rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  font-size: var(--font-size-mini, 20rpx);
}

.jan-tabbar-item-name {
  margin-top: -6rpx;
}

.jan-tabbar-item-dot {
  position: absolute;
  justify-self: flex-start;
  align-self: flex-end;
  width: 10rpx;
  height: 10rpx;
  margin-left: 4rpx;
  border-radius: 50%;
  background-color: red;
}

.jan-tabbar-item-info {
  text-overflow: clip;
  overflow: hidden;
  position: absolute;
  justify-self: flex-start;
  align-self: flex-end;
  box-sizing: border-box;
  height: 28rpx;
  border-radius: 14rpx;
  padding: 0 8rpx;
  font-size: 18rpx;
  background-color: red;
  color: #fff;
  margin-left: 10rpx;
}

.jan-tabbar-item-hover.jan-ripple {
  background-color: var(--bg-color);
  opacity: 0.8;
}
