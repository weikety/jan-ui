<view
  class="jan-popup--overlay {{ show ? '' : 'jan-popup--overlay--hide' }}"
  bind:tap="onOverlayTap"
  style="z-index: {{ zindex }}; visibility: {{ show ? 'visible' : 'hidden' }}; transition-duration: {{ duration / 1000 }}s;"
></view>

<view
  class="jan-popup--container jan-popup--container--{{ position }} {{ show ? '' : 'jan-popup--container--' + position + '--hide' }}"
  style="z-index: {{ zindex }}; visibility: {{ show ? 'visible' : 'hidden' }}; transition-duration: {{ duration / 1000 }}s;"
>
  <slot></slot>
</view>
