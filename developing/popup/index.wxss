.joy-popup {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.joy-popup .joy-popup--overlay {
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
}

.joy-popup--overlay.joy-popup--overlay--center {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.joy-popup--overlay.joy-popup--overlay--left {
  display: flex;
  flex-direction: row;
}

.joy-popup--overlay.joy-popup--overlay--right {
  display: flex;
  flex-direction: row-reverse;
}

.joy-popup--overlay.joy-popup--overlay--top {
  display: flex;
  flex-direction: column;
}

.joy-popup--overlay.joy-popup--overlay--bottom {
  display: flex;
  flex-direction: column-reverse;
}

.joy-popup--overlay .joy-popup--panel {
  background-color: white;
  word-break: break-all;
  overflow-x: hidden;
  overflow-y: auto;
}

.joy-popup--panel.joy-popup--panel--center {
  padding: 60rpx 100rpx;
  max-width: 80%;
  max-height: 80%;
}

.joy-popup--panel.joy-popup--panel--left {
  padding: 30rpx 50rpx;
  width: 400rpx;
  height: 100%;
}

.joy-popup--panel.joy-popup--panel--right {
  padding: 30rpx 50rpx;
  width: 400rpx;
  height: 100%;
}

.joy-popup--panel.joy-popup--panel--top {
  padding: 50rpx 30rpx;
  width: 100%;
  height: 40%;
}

.joy-popup--panel.joy-popup--panel--bottom {
  padding: 50rpx 30rpx;
  width: 100%;
  height: 40%;
}
