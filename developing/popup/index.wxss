@import "../main.wxss";

.jan-popup--container--center--hide {
  transform: translate3d(-50%, -50%, 0) scale(0) !important;
  opacity: 0;
}
.jan-popup--container--left--hide {
  transform: translate3d(-100%, 0, 0) !important;
}
.jan-popup--container--right--hide {
  transform: translate3d(100%, 0, 0) !important;
}
.jan-popup--container--top--hide {
  transform: translate3d(0, -100%, 0) !important;
}
.jan-popup--container--bottom--hide {
  transform: translate3d(0, 100%, 0) !important;
}

.jan-popup--container {
  position: fixed;
  max-height: 100%;
  transition-property: opacity, transform, visibility;
  background-color: var(--bg-color);
  word-break: break-all;
  overflow-x: hidden;
  overflow-y: auto;
}

.jan-popup--container--center {
  padding: 22rpx 28rpx;
  min-width: 80%;
  min-height: 40%;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
}

.jan-popup--container--left {
  padding: 22rpx 28rpx;
  min-width: 400rpx;
  height: 100%;
  top: 0;
  left: 0;
}

.jan-popup--container--right {
  padding: 22rpx 28rpx;
  min-width: 400rpx;
  height: 100%;
  top: 0;
  right: 0;
}

.jan-popup--container--top {
  padding: 22rpx 28rpx;
  width: 100%;
  height: 40%;
  top: 0;
  left: 0;
  right: 0;
}

.jan-popup--container--bottom {
  padding: 22rpx 28rpx;
  width: 100%;
  min-height: 40%;
  bottom: 0;
  left: 0;
  right: 0;
}
