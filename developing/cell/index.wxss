.joy-cell-container {
  width: 100%;
  overflow: hidden;
}

.joy-cell {
  width: 100%;
  box-sizing: border-box;
  min-height: 88rpx;
  background-color: var(--bg-color, #fff);
  padding: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
  font-size: var(--font-size-normal, 28rpx);
  color: var(--font-color-weight, #212121);
}

.joy-cell .joy-cell-label {
  font-size: var(--font-size-small, 24rpx);
  color: var(--font-color-light, #7d8288);
  margin-top: 4rpx;
}

.joy-cell-title {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.joy-cell-hover.joy-cell-clickable.joy-cell {
  background-color: var(--bg-color);
  opacity: 0.8;
}

.joy-cell .joy-cell-right {
  align-self: flex-start;
  font-size: var(--font-size-normal, 20rpx);
  color: var(--font-color-light, #7d8288);
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.joy-cell-divider-line {
  width: 100%;
  background-color: var(--bg-color, #fff);
}

.joy-cell-divider-line view {
  width: calc(100% - 28rpx);
  margin-left: 28rpx;
  height: 2rpx;
  background-color: var(--font-color, #fafafa);
  opacity: 0.1;
}

.joy-ripple {
  position: relative;
  overflow: hidden;
  transform: translate3d(0, 0, 0);
}

.joy-ripple::after {
  content: "";
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
  background-image: radial-gradient(
    circle,
    var(--ripple-color) 10%,
    transparent 10%
  );
  background-repeat: no-repeat;
  background-position: 50%;
  transform: scale(10, 10);
  opacity: 0;
  transition: transform 0.5s, opacity 1s;
  z-index: 0;
}

.joy-ripple:active::after {
  transform: scale(0, 0);
  opacity: 0.2;
  transition: 0s;
}
