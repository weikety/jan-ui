.joy-button {
  line-height: 1;
  min-width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #2d2d2d;
  color: #fff;
  padding: 0 !important;
  transition: all 0.3s;
  border-radius: 6rpx;
  overflow: hidden;
}

.joy-button.black {
  background-color: #212121;
}

.joy-button.orange {
  background-color: orange;
}

.joy-button.button-hover::before,
.joy-button:active::before {
  position: absolute;
  background: rgba(255, 255, 255, 0);
  content: "";
  border-radius: 50%;
  width: 100%;
  padding-top: 100%;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%) scale(1);
  animation: ripple-in 0.4s;
  animation-fill-mode: forwards;
}

@keyframes ripple-in {
  from {
    transform: translate(-50%, -50%) scale(0);
    background: rgba(255, 255, 255, 0.1);
  }

  to {
    transform: translate(-50%, -50%) scale(1);
    background: rgba(255, 255, 255, 0.1);
  }
}

@keyframes ripple-out {
  from {
    transform: translate(-50%, -50%) scale(0);
    background: rgba(0, 0, 0, 0.25);
  }

  to {
    transform: translate(-50%, -50%) scale(1);
    background: transparent;
  }
}
